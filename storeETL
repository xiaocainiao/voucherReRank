select
	a.city_id
    ,concat('{"max":',a.max_discount,',','"min":',a.min_discount,'}') discount_range_json
from
	(select
        mt_city_id city_id
        ,max(discount) max_discount
        ,min(discount) min_discount
    from
        al_catering.app_vrr_mt_voucher_poi_feature_d
    where
        partition_date = '2017-08-08'
    group by
        mt_city_id
     )a